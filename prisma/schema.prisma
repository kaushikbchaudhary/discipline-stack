generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id                  String            @id @default(cuid())
  name                String?
  email               String?           @unique
  emailVerified       DateTime?
  image               String?
  passwordHash        String?
  scheduleLocked      Boolean           @default(false)
  scheduleLockVersion Int               @default(1)
  pastEditUnlocked    Boolean           @default(false)
  dailyWinType        String?
  dailyWinBlockId     String?
  activeGoalId        String?
  createdAt           DateTime          @default(now())
  updatedAt           DateTime          @updatedAt

  accounts         Account[]
  sessions         Session[]
  scheduleBlocks   ScheduleBlock[]
  plans            Plan[]
  dailyCompletions DailyCompletion[]
  weeklyReviews    WeeklyReview[]
  blockCompletions BlockCompletion[]
  executionDebts   ExecutionDebt[]
  failureDays      FailureDay[]
  planChangeLogs   PlanChangeLog[]
  weeklyInsights   WeeklyInsights[]
  dailyWins        DailyWin[]
  quietWeeks       QuietWeek[]
  blockResistances BlockResistance[]
  nextActions      NextAction[]
  goals            Goal[]
  goalArtifacts    GoalArtifact[]
  activeGoal       Goal?              @relation("ActiveGoal", fields: [activeGoalId], references: [id])
  pushSubscriptions PushSubscription[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model ScheduleBlock {
  id            String   @id @default(cuid())
  userId        String
  name          String
  startTime     Int
  endTime       Int
  category      Category
  mandatory     Boolean  @default(false)
  lockedVersion Int      @default(1)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  blockCompletions BlockCompletion[]
  nextActions NextAction[]
  resistances BlockResistance[]
  artifacts GoalArtifact[]

  @@index([userId])
}

model BlockCompletion {
  id              String   @id @default(cuid())
  userId          String
  scheduleBlockId String
  date            DateTime
  completedAt     DateTime @default(now())

  user          User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  scheduleBlock ScheduleBlock @relation(fields: [scheduleBlockId], references: [id], onDelete: Cascade)

  @@unique([userId, scheduleBlockId, date])
  @@index([userId, date])
}

model Plan {
  id           String   @id @default(cuid())
  userId       String
  name         String
  startDate    DateTime
  durationDays Int      @default(30)
  locked       Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  days PlanDay[]
  tasks Task[]
  changeLogs PlanChangeLog[]

  @@index([userId])
}

model PlanDay {
  id       String   @id @default(cuid())
  planId   String
  dayIndex Int
  date     DateTime

  plan  Plan  @relation(fields: [planId], references: [id], onDelete: Cascade)

  @@unique([planId, dayIndex])
  @@index([planId])
}

model Task {
  id          String    @id @default(cuid())
  title       String
  description String    @default("")
  date        DateTime
  startTime   String?
  endTime     String?
  durationMinutes Int?
  completed   Boolean   @default(false)
  incompleteReason String?
  lastNotifiedAt DateTime?
  planId      String

  plan Plan @relation(fields: [planId], references: [id], onDelete: Cascade)

  @@index([planId])
  @@index([planId, date])
}

model PushSubscription {
  id        String   @id @default(cuid())
  userId    String
  endpoint  String   @unique
  p256dh    String
  auth      String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model DailyCompletion {
  id            String    @id @default(cuid())
  userId        String
  date          DateTime
  coreWorkDone  Boolean   @default(false) @map("incomeDone")
  practiceDone  Boolean   @default(false) @map("creationDone")
  healthDone    Boolean   @default(false)
  dailyWinSatisfied Boolean @default(false)
  completedAt   DateTime?
  outputType    String?
  outputContent String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
  @@index([userId, date])
}

model WeeklyReview {
  id            String   @id @default(cuid())
  userId        String
  weekStartDate DateTime
  q1            String
  q2            String
  q3            String
  q4            String
  stopDoing     String   @default("")
  resistanceBlock String @default("")
  createdAt     DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, weekStartDate])
  @@index([userId, weekStartDate])
}

enum GoalType {
  EXAM_PREP
  CAREER_GROWTH
  BUSINESS
  SKILL_BUILDING
  HEALTH
  PERSONAL_SYSTEM
  CUSTOM
}

enum Category {
  CoreWork
  SupportWork
  Learning
  Practice
  Health
  Reflection
  Recovery
}

enum ArtifactType {
  TEXT
  URL
  FILE
}

model Goal {
  id          String    @id @default(cuid())
  userId      String
  title       String
  description String?
  goalType    GoalType
  startDate   DateTime
  targetDate  DateTime?
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  artifacts GoalArtifact[]
  dailyWins DailyWin[]
  activeGoalFor User[] @relation("ActiveGoal")

  @@index([userId])
  @@index([userId, isActive])
}

enum ResistanceReason {
  TOO_TIRED
  AVOIDANCE
  UNCLEAR_NEXT_STEP
  EXTERNAL_INTERRUPTION
  OVERPLANNED
}

model DailyWin {
  id          String   @id @default(cuid())
  userId      String
  date        DateTime
  satisfiedBy String
  satisfiedAt DateTime @default(now())
  goalId      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  goal Goal? @relation(fields: [goalId], references: [id], onDelete: SetNull)

  @@unique([userId, date])
  @@index([userId, date])
}

model BlockResistance {
  id       String   @id @default(cuid())
  userId   String
  blockId  String
  date     DateTime
  reason   ResistanceReason
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  block ScheduleBlock @relation(fields: [blockId], references: [id], onDelete: Cascade)

  @@unique([userId, blockId, date])
  @@index([userId, date])
}

model GoalArtifact {
  id        String       @id @default(cuid())
  userId    String
  goalId    String
  blockId   String?
  date      DateTime
  type      ArtifactType
  content   String?
  fileUrl   String?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  goal Goal @relation(fields: [goalId], references: [id], onDelete: Cascade)
  block ScheduleBlock? @relation(fields: [blockId], references: [id], onDelete: SetNull)

  @@index([userId, date])
  @@index([goalId, date])
}

model NextAction {
  id       String   @id @default(cuid())
  userId   String
  blockId  String
  date     DateTime
  text     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  block ScheduleBlock @relation(fields: [blockId], references: [id], onDelete: Cascade)

  @@unique([userId, blockId, date])
  @@index([userId, date])
}

model QuietWeek {
  id            String   @id @default(cuid())
  userId        String
  weekStartDate DateTime
  createdAt     DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, weekStartDate])
  @@index([userId, weekStartDate])
}
model ExecutionDebt {
  id             String    @id @default(cuid())
  userId         String
  missedDate     DateTime
  reason         String
  createdAt      DateTime  @default(now())
  resolvedAt     DateTime?
  resolutionType String?
  resolutionNote String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, missedDate])
  @@index([userId, resolvedAt])
}

model FailureDay {
  id        String   @id @default(cuid())
  userId    String
  date      DateTime
  note      String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
  @@index([userId, date])
}

model PlanChangeLog {
  id        String   @id @default(cuid())
  userId    String
  planId    String
  changeAt  DateTime @default(now())
  changeType String
  details   String
  reason    String

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  plan Plan @relation(fields: [planId], references: [id], onDelete: Cascade)

  @@index([userId, changeAt])
  @@index([planId, changeAt])
}

model WeeklyInsights {
  id             String   @id @default(cuid())
  userId         String
  weekStartDate  DateTime
  missedByCategory String
  mostSkippedHour Int
  trend          String
  createdAt      DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, weekStartDate])
  @@index([userId, weekStartDate])
}
