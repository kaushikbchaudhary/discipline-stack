generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @db.Uuid
  email     String?  @unique
  name      String?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  goals            Goal[]
  executionBlocks  ExecutionBlock[]
  plans            Plan[]
  planDays         PlanDay[]
  tasks            Task[]
  dailyCompletions DailyCompletion[]
  artifacts        Artifact[]
  weeklyReviews    WeeklyReview[]
  pushSubscriptions PushSubscription[]

  @@map("users")
}

model Goal {
  id          String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId      String    @db.Uuid @map("user_id")
  title       String
  description String?
  goalType    GoalType @map("goal_type")
  startDate   DateTime @map("start_date")
  targetDate  DateTime? @map("target_date")
  isActive    Boolean   @default(true) @map("is_active")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  artifacts Artifact[]

  @@index([userId])
  @@index([userId, isActive])
  @@map("goals")
}

model ExecutionBlock {
  id              String        @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId          String        @db.Uuid @map("user_id")
  name            String
  category        BlockCategory
  startTime       String @map("start_time")
  endTime         String @map("end_time")
  durationMinutes Int @map("duration_minutes")
  mandatory       Boolean       @default(false)
  createdAt       DateTime      @default(now()) @map("created_at")
  updatedAt       DateTime      @updatedAt @map("updated_at")

  user  User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  tasks Task[]

  @@index([userId])
  @@map("execution_blocks")
}

model Plan {
  id           String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId       String   @db.Uuid @map("user_id")
  name         String
  startDate    DateTime @map("start_date")
  durationDays Int @map("duration_days")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  user User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  days PlanDay[]

  @@index([userId])
  @@index([userId, startDate])
  @@map("plans")
}

model PlanDay {
  id       String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId   String   @db.Uuid @map("user_id")
  planId   String   @db.Uuid @map("plan_id")
  dayIndex Int @map("day_index")
  date     DateTime
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  plan  Plan  @relation(fields: [planId], references: [id], onDelete: Cascade)
  tasks Task[]

  @@unique([planId, dayIndex])
  @@index([userId, date])
  @@index([planId, date])
  @@map("plan_days")
}

model Task {
  id              String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId          String   @db.Uuid @map("user_id")
  planDayId       String   @db.Uuid @map("plan_day_id")
  blockId         String?  @db.Uuid @map("block_id")
  title           String
  description     String?
  date            DateTime
  startTime       String @map("start_time")
  endTime         String @map("end_time")
  durationMinutes Int @map("duration_minutes")
  completed       Boolean  @default(false)
  incompleteReason String? @map("incomplete_reason")
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  day  PlanDay @relation(fields: [planDayId], references: [id], onDelete: Cascade)
  block ExecutionBlock? @relation(fields: [blockId], references: [id], onDelete: SetNull)
  artifacts Artifact[]

  @@index([userId, date])
  @@index([planDayId])
  @@index([blockId])
  @@map("tasks")
}

model DailyCompletion {
  id            String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId        String   @db.Uuid @map("user_id")
  date          DateTime
  completedAt   DateTime? @map("completed_at")
  outputType    ArtifactType? @map("output_type")
  outputContent String? @map("output_content")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
  @@index([userId, date])
  @@map("daily_completions")
}

model Artifact {
  id        String       @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId    String       @db.Uuid @map("user_id")
  goalId    String?      @db.Uuid @map("goal_id")
  taskId    String?      @db.Uuid @map("task_id")
  blockId   String?      @db.Uuid @map("block_id")
  date      DateTime
  type      ArtifactType
  content   String?
  url       String?
  fileUrl   String? @map("file_url")
  createdAt DateTime     @default(now()) @map("created_at")

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  goal  Goal?  @relation(fields: [goalId], references: [id], onDelete: SetNull)
  task  Task? @relation(fields: [taskId], references: [id], onDelete: SetNull)
  block ExecutionBlock? @relation(fields: [blockId], references: [id], onDelete: SetNull)

  @@index([userId, date])
  @@index([goalId, date])
  @@map("artifacts")
}

model WeeklyReview {
  id            String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId        String   @db.Uuid @map("user_id")
  weekStartDate DateTime @map("week_start_date")
  q1            String
  q2            String
  q3            String
  q4            String
  stopDoing     String? @map("stop_doing")
  resistanceBlock String? @map("resistance_block")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, weekStartDate])
  @@index([userId, weekStartDate])
  @@map("weekly_reviews")
}

model PushSubscription {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId    String   @db.Uuid @map("user_id")
  endpoint  String   @unique
  p256dh    String
  auth      String
  createdAt DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("push_subscriptions")
}

enum GoalType {
  EXAM_PREP
  CAREER_GROWTH
  BUSINESS
  SKILL_BUILDING
  HEALTH
  PERSONAL_SYSTEM
  CUSTOM
}

enum BlockCategory {
  CoreWork
  SupportWork
  Learning
  Practice
  Health
  Reflection
  Recovery
}

enum ArtifactType {
  TEXT
  URL
  FILE
}
