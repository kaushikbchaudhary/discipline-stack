generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id                  String            @id @default(cuid())
  name                String?
  email               String?           @unique
  emailVerified       DateTime?
  image               String?
  passwordHash        String?
  scheduleLocked      Boolean           @default(false)
  scheduleLockVersion Int               @default(1)
  pastEditUnlocked    Boolean           @default(false)
  createdAt           DateTime          @default(now())
  updatedAt           DateTime          @updatedAt

  accounts         Account[]
  sessions         Session[]
  scheduleBlocks   ScheduleBlock[]
  plans            Plan[]
  dailyCompletions DailyCompletion[]
  weeklyReviews    WeeklyReview[]
  blockCompletions BlockCompletion[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model ScheduleBlock {
  id            String   @id @default(cuid())
  userId        String
  name          String
  startTime     Int
  endTime       Int
  category      String
  mandatory     Boolean  @default(false)
  lockedVersion Int      @default(1)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  blockCompletions BlockCompletion[]

  @@index([userId])
}

model BlockCompletion {
  id              String   @id @default(cuid())
  userId          String
  scheduleBlockId String
  date            DateTime
  completedAt     DateTime @default(now())

  user          User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  scheduleBlock ScheduleBlock @relation(fields: [scheduleBlockId], references: [id], onDelete: Cascade)

  @@unique([userId, scheduleBlockId, date])
  @@index([userId, date])
}

model Plan {
  id           String   @id @default(cuid())
  userId       String
  name         String
  startDate    DateTime
  durationDays Int      @default(30)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  days PlanDay[]

  @@index([userId])
}

model PlanDay {
  id       String   @id @default(cuid())
  planId   String
  dayIndex Int
  date     DateTime

  plan  Plan  @relation(fields: [planId], references: [id], onDelete: Cascade)
  tasks Task[]

  @@unique([planId, dayIndex])
  @@index([planId])
}

model Task {
  id          String    @id @default(cuid())
  planDayId   String
  title       String
  category    String
  mandatory   Boolean   @default(false)
  sortOrder   Int       @default(0)
  completedAt DateTime?

  planDay PlanDay @relation(fields: [planDayId], references: [id], onDelete: Cascade)

  @@index([planDayId])
}

model DailyCompletion {
  id            String    @id @default(cuid())
  userId        String
  date          DateTime
  incomeDone    Boolean   @default(false)
  creationDone  Boolean   @default(false)
  healthDone    Boolean   @default(false)
  completedAt   DateTime?
  outputType    String?
  outputContent String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
  @@index([userId, date])
}

model WeeklyReview {
  id            String   @id @default(cuid())
  userId        String
  weekStartDate DateTime
  q1            String
  q2            String
  q3            String
  q4            String
  createdAt     DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, weekStartDate])
  @@index([userId, weekStartDate])
}
